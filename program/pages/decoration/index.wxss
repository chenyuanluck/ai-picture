image {
    width: auto;
    height: auto;
    display: block;
}

.page {
    width: 750rpx;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.page .img-box {
    flex: 1;
}

.page .img-box img {
    width: 100%;
}

.page-blank {
    height: 400rpx;
}

.page .button-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 5%;
    box-sizing: border-box;
    height: 400rpx;
    position: fixed;
    flex-direction: column;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #eee;
}

.page .button-container .button-box {
    flex: 1;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.page .button-container .button-box .handle-box {
    width: 100%;
    display: block;
    height: 200rpx;
    text-align: center;
}

.page .button-container .button-box .handle-box button {
    display: inline-block;
    padding: 0 10rpx;
    margin-right: 15rpx;
    margin-top: 15rpx;
}

.page .button-container .button-box .save {
    width: 100%;
}
