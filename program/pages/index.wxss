page {

}

.page {
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    padding: 20% 0;
}

.page .handle-container {
    position: fixed;
    left: 5%;
    right: 5%;
    top: 30%;
    bottom: 30%;
    display: flex;
    flex-direction: column;
    justify-content: center;

}

.page .handle-container .item-box {
    width: 100%;
    flex: 1;
    display: flex;
    align-items: center;
}

.page .handle-container .item-box navigator {
    display: block;
    width: 100%;
}


.page .handle-container .item-box button {
    width: 100%;
}
