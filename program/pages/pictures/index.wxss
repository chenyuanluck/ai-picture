image {
    width: auto;
    height: auto;
    display: block;
}

page {
    background-color: #fff;
}

.page {
    width: 750rpx;
}

.page .image-container {
    width: 100%;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}

.page .image-container .group {
    width: 750rpx;
    padding-top: 20rpx;
}

.page .image-container .group .date {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
}

.page .image-container .group .date text {
    margin: 0 4rpx;
}

.page .image-container .group .date text.big {
    font-size: 32rpx;
}

.page .image-container .group .group-content {
    width: 750rpx;
    padding: 5rpx;
}

.page .image-container .group .group-content .item {
    width: 33.3%;
    height: 240rpx;
    padding: 5rpx;
    display: inline-block;
}

.page .image-container .group .group-content .item image {
    width: 100%;
    height: 100%;
}
